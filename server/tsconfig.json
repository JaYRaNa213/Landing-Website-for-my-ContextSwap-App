{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,                           // override base
    "allowImportingTsExtensions": false,       // needed for emit
    "outDir": "../dist",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["./**/*"]
}
